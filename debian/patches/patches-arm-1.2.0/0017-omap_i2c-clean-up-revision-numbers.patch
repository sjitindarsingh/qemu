From: Peter Maydell <peter.maydell@linaro.org>
Date: Wed, 4 Jul 2012 11:18:38 +0000
Subject: [PATCH 17/77] omap_i2c: clean up revision numbers

---
 hw/omap_i2c.c |    9 ++++++---
 1 file changed, 6 insertions(+), 3 deletions(-)

diff --git a/hw/omap_i2c.c b/hw/omap_i2c.c
index 20bc82e..7cae8ab 100644
--- a/hw/omap_i2c.c
+++ b/hw/omap_i2c.c
@@ -48,8 +48,11 @@ typedef struct OMAPI2CState {
     uint16_t test;
 } OMAPI2CState;
 
-#define OMAP2_INTR_REV	0x34
-#define OMAP2_GC_REV	0x34
+/* I2C controller revision register values */
+#define OMAP1_INTR_REV    0x11
+#define OMAP2_INTR_REV    0x34
+#define OMAP3_INTR_REV    0x3c
+#define OMAP3630_INTR_REV 0x40
 
 static void omap_i2c_interrupts_update(OMAPI2CState *s)
 {
@@ -263,7 +266,7 @@ static void omap_i2c_write(void *opaque, target_phys_addr_t addr,
         return;
 
     case 0x04:	/* I2C_IE */
-        s->mask = value & (s->revision < OMAP2_GC_REV ? 0x1f : 0x3f);
+        s->mask = value & (s->revision < OMAP2_INTR_REV ? 0x1f : 0x3f);
         break;
 
     case 0x08:	/* I2C_STAT */
