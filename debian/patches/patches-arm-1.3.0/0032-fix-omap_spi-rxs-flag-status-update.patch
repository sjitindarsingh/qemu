diff --git a/hw/omap_spi.c b/hw/omap_spi.c
index 7bcf692..08d2462 100644
--- a/hw/omap_spi.c
+++ b/hw/omap_spi.c
@@ -229,8 +229,11 @@ static void omap_mcspi_transfer_run(OMAPSPIBusState *s, int chnum)
     ch->tx = 0;
     ch->status |= 1 << 2;               /* EOT */
     ch->status |= 1 << 1;               /* TXS */
-    if (trm != 2)
+    if (trm != 2) {
         ch->status |= 1;                /* RXS */
+    } else {
+        ch->status &= ~1;               /* RXS */
+    }
 
